{% extends "layout.njk" %}

{% block content %}
<div id="about">
   <h1>Sobre</h1>
</div>

<section id="cards">

   {% for item in items%}
   <div id="card">
      <div class="card__image-container">
         <img src="{{item.img}}" alt="Imagem de {{item.title}}">
      </div>
      <div class="card__content">
         <p>{{item.title}}</p>
      </div>
      <div class="card__info">
         {{item.info}}
      </div>
   </div>

   {% endfor %}
</section>

{% endblock %}